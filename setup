#!/bin/bash

set -x
set -e

if [ "$EUID" -ne 0 ]
then
  echo "Please run as root"
  exit 1
fi

echo "Installing packages"
apt-get install aptitude
aptitude update && aptitude install -y vim git ruby ruby-dev build-essential \
  mysql-server libmysqlclient-dev \
  nodejs nodejs-legacy \
  augeas-tools etckeeper

gem install bundler

echo "Configuring ssh"
mkdir -p /root/.ssh
[ -f /root/.ssh/authorized_keys ] || echo "ssh-rsa  eloyesp@cobre
" >> /root/.ssh/authorized_keys
chmod 600 /root/.ssh/authorized_keys

echo "Disable password login with ssh"
augtool -s "set /files/etc/ssh/sshd_config/PasswordAuthentication no"
service ssh reload

echo "Creating the user for the application"
[ -d /home/representaciones ] || adduser representaciones --disabled-password

echo "Configuring ssh for representaciones"
mkdir -p /home/representaciones/.ssh
[ -f /home/representaciones/.ssh/authorized_keys ] || echo "ssh-rsa  eloyesp@cobre
" >> /home/representaciones/.ssh/authorized_keys
chmod 600 /home/representaciones/.ssh/authorized_keys
chown representaciones:representaciones /home/representaciones/.ssh/authorized_keys

echo "Setup deploy folder"
mkdir -p /var/www/representaciones
chown representaciones:representaciones /var/www/representaciones

echo "Scheduling database backup"
echo "[disabled] cp -pf files/backup_database /etc/cron.daily/"
